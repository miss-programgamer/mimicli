{
	"compilerOptions": {
		"composite": true,
		"rootDir": "source",
		"outDir": "lib",
		"strict": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"sourceMap": true,
		"noEmitOnError": true,
		"tsBuildInfoFile": "tsbuildinfo/source.tsbuildinfo"
	},
	"include": [
		"source/**/*.ts",
	],
	"exclude": [
		"source/**/*.test.ts"
	]
}